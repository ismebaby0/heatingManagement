<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.neusoft.ht.login.dao.IUserDao">

 <!-- 没有关联属性的结果映射 -->
  <resultMap id="UserResultMap" type="User" >
  	<id property="uuserid" column="UUSERID" />
  	<result property="upassword" column="UPASSWORD" />
   <result property="uname" column="UNAME" />
  </resultMap>
 <insert id="create">
   insert into HT_User values (#{uuserid},#{upassword},#{uname})
 </insert>
 
  <update id="update">
   update HT_User set UserPassword=#{upassword},UserName=#{uname} where UUSERID=#{uuserid}
  </update>
  
  <delete id="delete">
   delete from HT_User where UUSERID=#{uuserid}
  </delete>
   
 <select id="selectWithAll" resultMap="UserResultMap">
  select * from HT_User
 </select>
 
  <select id="selectById" resultMap="UserResultMap">
  select * from HT_User where UUSERID=#{uuserid}
 </select>
 

</mapper>

